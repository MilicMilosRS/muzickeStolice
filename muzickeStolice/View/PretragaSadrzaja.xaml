<Window x:Class="muzickeStolice.View.PretragaSadrzaja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muzickeStolice.View"
        mc:Ignorable="d"
        Title="PretragaSadrzaja" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="589*"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="2" Name="bPretrazi" Content="Pretrazi" HorizontalAlignment="Center" VerticalAlignment="Center" Width="85" Click="bPretrazi_Click"/>
        <TextBox Grid.Column="1" Name="tbPretraga" HorizontalAlignment="Center" Margin="0,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="569"/>
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="1">
            <StackPanel>
                <Label Content="Osobe:"/>
                <DataGrid SelectionUnit="FullRow" SelectedCellsChanged="dgOsobe_SelectedCellsChanged"  Name="dgOsobe"/>
                <Label Content="Bendovi:"/>
                <DataGrid SelectionUnit="FullRow" SelectedCellsChanged="dgBendovi_SelectedCellsChanged"  Name="dgBendovi"/>
                <Label Content="Muzicka dela:"/>
                <DataGrid SelectionUnit="FullRow" SelectedCellsChanged="dgDela_SelectedCellsChanged"  Name="dgDela"/>
            </StackPanel>
        </ScrollViewer>
        <Button Name="bDetalji" Grid.Column="2" Content="Detalji" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="95" Click="bDetalji_Click"/>
        <Button Click="bLogin_Click" Name="bLogin" Content="Log in" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="86"/>
        <Button Click="bLogout_Click" Name="bLogout" Content="Log out" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="86"/>
        <Label Name="lLogin" Grid.Column="1" Content="" HorizontalAlignment="Right" Margin="0,5,295,0" Grid.Row="2" VerticalAlignment="Top" Width="284"/>
        <Button x:Name="bAdmin" Grid.Column="1" Content="Administracija" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="95" Click="bAdmin_Click"  Margin="470,0,0,0"/>
        <Button x:Name="bGlasanje" Grid.Column="1" Content="Glasaj" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Bottom" Width="95" Click="bGlasanje_Click"  Margin="318,0,0,5"/>

    </Grid>
</Window>
