        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muzickeStolice.View"
        mc:Ignorable="d"
        Title="Glasanje" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="397*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1">
            <DataGrid Name="dg"/>
        </ScrollViewer>
        <Label Content="Godina:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <TextBox Name="tbGod" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Margin="66,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="80"/>
        <Button Name="bGlasaj" Content="Glasaj" HorizontalAlignment="Left" Margin="736,6,0,0" VerticalAlignment="Top" Click="bGlasaj_Click"/>
        <Label Name="lOdabrani" HorizontalAlignment="Left" Margin="165,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
